@inherits LayoutComponentBase
@inject NavigationManager nav

<MudLayout>
    <MudMainContent>
        <MudStack>
            <MudPaper>
            <MudNavMenu Dense="true" Color="Color.Primary">
                <MudNavLink OnClick="@((e) => nav.NavigateTo("/"))">Main</MudNavLink>
                <MudNavLink OnClick="@((e) => nav.NavigateTo("/playership"))">Player Ship</MudNavLink>
                <MudNavLink OnClick="@((e) => nav.NavigateTo("/crewscience"))">Crew & Science</MudNavLink>
                <MudNavLink OnClick="@((e) => nav.NavigateTo("/galaxy"))">Galaxy</MudNavLink>
                <MudNavLink OnClick="@((e) => nav.NavigateTo("/missions"))">Missions</MudNavLink>
            </MudNavMenu>
            </MudPaper>
            @Body
        </MudStack>
    </MudMainContent>
</MudLayout>

<MudThemeProvider IsDarkMode="true" Theme="@mudTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

@code{

    MudTheme mudTheme;

    protected override void OnInitialized()
    {
        mudTheme = new MudTheme() { };
        mudTheme.LayoutProperties.AppbarHeight = "0";
    }
}