@inherits LayoutComponentBase
@inject NavigationManager nav

<MudLayout>
    <MudMainContent>
        <MudStack>
            <MudPaper>
            <MudNavMenu Dense="true" Color="Color.Primary">
                <MudNavLink OnClick="@((e) => nav.NavigateTo(GetNavStr("/")))">Main</MudNavLink>
                <MudNavLink OnClick="@((e) => nav.NavigateTo(GetNavStr("/playership")))">Player Ship</MudNavLink>
                <MudNavLink OnClick="@((e) => nav.NavigateTo(GetNavStr("/crewscience")))">Crew & Science</MudNavLink>
                <MudNavLink OnClick="@((e) => nav.NavigateTo(GetNavStr("/galaxy")))">Galaxy</MudNavLink>
                <MudNavLink OnClick="@((e) => nav.NavigateTo(GetNavStr("/missions")))">Missions</MudNavLink>
            </MudNavMenu>
            </MudPaper>
            @Body
        </MudStack>
    </MudMainContent>
</MudLayout>

<MudThemeProvider IsDarkMode="true" Theme="@mudTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

@code{

    MudTheme mudTheme;

    protected override void OnInitialized()
    {
        mudTheme = new MudTheme() { };
        mudTheme.LayoutProperties.AppbarHeight = "0";
    }

    string GetNavStr(string i) =>
#if DEBUG
        i;
#else
        "/PLCSE" + i;
#endif
}