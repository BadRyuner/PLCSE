@inherits LayoutComponentBase

<MudLayout>
    <MudMainContent>
        <MudStack>
            <MudPaper>
            <MudNavMenu Dense="true" Color="Color.Primary">
                <MudNavLink Href="@mainpage">Main</MudNavLink>
                <MudNavLink Href="@playership">Player Ship</MudNavLink>
                <MudNavLink Href="@crewscience">Crew & Science</MudNavLink>
                <MudNavLink Href="@galaxy">Galaxy</MudNavLink>
            </MudNavMenu>
            </MudPaper>
            @Body
        </MudStack>
    </MudMainContent>
</MudLayout>

<MudThemeProvider IsDarkMode="true" Theme="@mudTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

@code{
    #if DEBUG
    string mainpage = "/main";
    string crewscience = "/crewscience";
    string playership = "/playership";
    string galaxy = "/galaxy";
    #else
    string mainpage = "/PLCSE/main";
    string playership = "/PLCSE/playership";
    string crewscience = "/PLCSE/crewscience";
    string galaxy = "/PLCSE/galaxy";
    #endif

    MudTheme mudTheme;

    protected override void OnInitialized()
    {
        mudTheme = new MudTheme() { };
        mudTheme.LayoutProperties.AppbarHeight = "0";
    }
}