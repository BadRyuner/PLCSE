				</MudItem>
				<MudItem xs="12" sm="4"> 
					<MudCheckBox @bind-Checked="Save.CurrentSave.PurchaseLimitsEnabled" Label="Purchase Limits Enabled" Margin="Margin.Dense" Variant="Variant.Outlined"/> 
				</MudItem>
			</MudGrid>
		</MudCardContent>
	</MudCard>

